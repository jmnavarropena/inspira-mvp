# Configuración de Supabase (Desarrollo)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Configuración de Azure SQL Server (Producción)
AZURE_SQL_SERVER=your-server.database.windows.net
AZURE_SQL_DATABASE=InspiraDB
AZURE_SQL_USERNAME=your-username
AZURE_SQL_PASSWORD=your-password

# Configuración de Azure AD (Microsoft Authentication)
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/your-tenant-id
AZURE_AD_REDIRECT_URI=http://localhost:5173/auth/callback

# Configuración de la aplicación
VITE_APP_NAME=Inspira
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Configuración de archivos
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif

# URLs de logos (usar las imágenes subidas)
VITE_LOGO_INSPIRA=/logo_inspira2.png
VITE_LOGO_CL_GRUPO=/logo_cl_grupo.png
VITE_LOGO_GLOBO=/logo_globo_bg.png

# Configuración de email (opcional)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=noreply@clgrupo.com
SMTP_PASSWORD=your-email-password

# Configuración de Azure Blob Storage (opcional)
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_STORAGE_CONTAINER=inspira-attachments